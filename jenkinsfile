pipeline{
    
    agent any
    stages{
        stage("Code Clone"){
            steps{
                git url: 'https://github.com/anurag1352/Swiggy-application.git', branch: 'master'
            }
        }
        stage("Build Image"){
            steps{
                sh "docker build -t swiggy-app ."
            }
        }
        stage("Test"){
            steps{
                echo "Testing... Start"
            }
        }
        stage("Scan image & files"){
            steps{
                sh "trivy fs . -o results.json"
            }
        }
        stage("Deploy"){
            steps{
                sh "docker-compose down && docker-compose up -d"
            }
        }
    }
}
